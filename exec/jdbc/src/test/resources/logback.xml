<configuration>

  <appender name="SOCKET" class="de.huxhorn.lilith.logback.appender.ClassicMultiplexSocketAppender">
    <Compressing>true</Compressing>
    <ReconnectionDelay>10000</ReconnectionDelay>
    <IncludeCallerData>true</IncludeCallerData>
    <RemoteHosts>${LILITH_HOSTNAME:-localhost}</RemoteHosts>
  </appender>

 <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <level value="warn" />
  </appender>

<!--
  <logger name="org.apache.drill">
    <level value="debug" />
  </logger>



-->

  <logger name="org.apache.drill.jdbc.test.Drill2489CallsAfterCloseThrowExceptionsTest">
    <level value="trace" />
  </logger>

  <logger name="org.apache.drill.exec.compile">
    <level value="info" />
  </logger>

  <logger name="org.apache.drill.exec.rpc">
    <level value="error" />
  </logger>

  <logger name="org.apache.drill.exec.expr.fn.DrillFunctionRegistry">
    <level value="error" />
  </logger>

  <logger name="org.apache.drill.exec.memory">
    <level value="info" />
  </logger>

  <logger name="org.apache.drill.exec.work.foreman">
    <level value="info" />
  </logger>


  <logger name="io.netty">
    <level value="info" />
  </logger>

  <logger name="org.apache.hadoop">
    <level value="info" />
  </logger>


  <root>
    <!--level value="debug" /-->
    <level value="info" />
    <appender-ref ref="SOCKET" />
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
